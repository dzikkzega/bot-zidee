                break;
            case userMessageWithoutPrefix === 'crop':
                await stickercropCommand(sock, chatId, message);
                commandExecuted = true;
                break;
            case userMessageWithoutPrefix.startsWith('pies'):
                {
                    const parts = rawText.trim().split(/\s+/);
                    const args = parts.slice(1);
                    await piesCommand(sock, chatId, message, args);
                    commandExecuted = true;
                }
                break;
            case userMessageWithoutPrefix === 'china':
                await piesAlias(sock, chatId, message, 'china');
                commandExecuted = true;
                break;
            case userMessageWithoutPrefix === 'indonesia':
                await piesAlias(sock, chatId, message, 'indonesia');
                commandExecuted = true;
                break;
            case userMessageWithoutPrefix === 'japan':
                await piesAlias(sock, chatId, message, 'japan');
                commandExecuted = true;
                break;
            case userMessageWithoutPrefix === 'korea':
                await piesAlias(sock, chatId, message, 'korea');
                commandExecuted = true;
                break;
            case userMessageWithoutPrefix === 'hijab':
                await piesAlias(sock, chatId, message, 'hijab');
                commandExecuted = true;
                break;
            case userMessageWithoutPrefix.startsWith('update'):
                {
                    const parts = rawText.trim().split(/\s+/);
                    const zipArg = parts[1] && parts[1].startsWith('http') ? parts[1] : '';
                    await updateCommand(sock, chatId, message, zipArg);
                }
                commandExecuted = true;
                break;
            case userMessageWithoutPrefix.startsWith('removebg') || userMessageWithoutPrefix.startsWith('rmbg') || userMessageWithoutPrefix.startsWith('nobg'):
                await removebgCommand.exec(sock, message, userMessageWithoutPrefix.split(' ').slice(1));
                break;
            case userMessageWithoutPrefix.startsWith('remini') || userMessageWithoutPrefix.startsWith('enhance') || userMessageWithoutPrefix.startsWith('upscale'):
                await reminiCommand(sock, chatId, message, userMessageWithoutPrefix.split(' ').slice(1));
                break;
            case userMessageWithoutPrefix.startsWith('sora'):
                await soraCommand(sock, chatId, message);
                break;
            
            // Product list commands
            case userMessageWithoutPrefix === 'list':
                await listCommand(sock, chatId, message);
                commandExecuted = true;
                break;
            case userMessageWithoutPrefix === 'productpath' || userMessageWithoutPrefix === 'productfile' || userMessageWithoutPrefix === 'plistpath':
                await productPathCommand(sock, chatId, message);
                commandExecuted = true;
                break;
            case userMessageWithoutPrefix.startsWith('addlist '):
                {
                    const productText = userMessageWithoutPrefix.slice(8).trim();
                    await addlistCommand(sock, chatId, message, productText);
                }
                commandExecuted = true;
                break;
            case userMessageWithoutPrefix.startsWith('updlist '):
                {
                    const productText = userMessageWithoutPrefix.slice(8).trim();
                    await updlistCommand(sock, chatId, message, productText);
                }
                commandExecuted = true;
                break;
            case userMessageWithoutPrefix.startsWith('dellist '):
                {
                    const productName = userMessageWithoutPrefix.slice(8).trim();
                    await dellistCommand(sock, chatId, message, productName);
                }
                commandExecuted = true;
                break;
            
            default:
                // Handle non-command messages
                await handleAutotypingForMessage(sock, chatId, userMessageWithoutPrefix);
                
                if (isGroup) {
                    await handleTagDetection(sock, chatId, message, senderId);
                    await handleMentionDetection(sock, chatId, message);
                    
                    // Try to find product by name (for groups only)
                    const productFound = await productDetailCommand(sock, chatId, message, userMessageWithoutPrefix);
                    
                    // Only run chatbot if product not found and in public mode or for owner/sudo
                    if (!productFound && (isPublic || isOwnerOrSudoCheck) && userMessageWithoutPrefix) {
                        await handleChatbotResponse(sock, chatId, message, userMessageWithoutPrefix, senderId);
                    }
                }
                commandExecuted = false;
                break;
        }

        // If a command was executed, show typing status after command execution
        if (commandExecuted !== false) {
            // Command was executed, now show typing status after command execution
            await showTypingAfterCommand(sock, chatId);
        }

        // Function to handle .groupjid command
        async function groupJidCommand(sock, chatId, message) {
            const groupJid = message.key.remoteJid;

            if (!groupJid.endsWith('@g.us')) {
                return await sock.sendMessage(chatId, {
                    text: "‚ùå This command can only be used in a group."
                });
            }

            await sock.sendMessage(chatId, {
                text: `‚úÖ Group JID: ${groupJid}`
            }, {
                quoted: message
            });
        }

        // Add reaction for commands (if commandExecuted is set)
        if (commandExecuted === true) {
            await addCommandReaction(sock, message);
        }
    } catch (error) {
        console.error('‚ùå Error in message handler:', error.message);
        // Only try to send error message if we have a valid chatId
        if (chatId) {
            await sock.sendMessage(chatId, {
                text: '‚ùå Failed to process command!',
                ...channelInfo
            });
        }
    }
}

async function handleGroupParticipantUpdate(sock, update) {
    try {
        const { id, participants, action, author } = update;

        // Check if it's a group
        if (!id.endsWith('@g.us')) return;

        // Respect bot mode: only announce promote/demote in public mode
        let isPublic = true;
        try {
            const modeData = JSON.parse(fs.readFileSync('./data/messageCount.json'));
            if (typeof modeData.isPublic === 'boolean') isPublic = modeData.isPublic;
        } catch (e) {
            // If reading fails, default to public behavior
        }

        // Handle promotion events
        if (action === 'promote') {
            if (!isPublic) return;
            await handlePromotionEvent(sock, id, participants, author);
            return;
        }

        // Handle demotion events
        if (action === 'demote') {
            if (!isPublic) return;
            await handleDemotionEvent(sock, id, participants, author);
            return;
        }

        // Handle join events
        if (action === 'add') {
            await handleJoinEvent(sock, id, participants);
        }

        // Handle leave events
        if (action === 'remove') {
            await handleLeaveEvent(sock, id, participants);
        }
    } catch (error) {
        console.error('Error in handleGroupParticipantUpdate:', error);
    }
}

// Instead, export the handlers along with handleMessages
module.exports = {
    handleMessages,
    handleGroupParticipantUpdate,
    handleStatus: async (sock, status) => {
        await handleStatusUpdate(sock, status);
    }
};